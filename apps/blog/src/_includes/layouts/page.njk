---
layout: base
tags: pages
---

{% block content %}
<article class="{{ structure.g_pageWidth }} h-full">

  <h1 class="{{ colors.headingsCustom or colors.headingsDefault }}">{{ title }}</h1>

  {% if seo.description %}
    <div class="p-2 {{ colors.borderCustom.borders or colors.borderDefault.borders }} {{ colors.borderCustom.color or colors.borderDefault.color }}">
      {{ seo.description }}
    </div>
  {% endif %}

  {{ content | safe }}

</article>
{% endblock %}
