{
  "name": "yeti-design",
  "version": "1.0.0",
  "description": "Design system for yeti brand",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit": "lint-staged --relative --concurrent=false",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PavelPleshko/yeti-design.git"
  },
  "keywords": [
    "yeti",
    "design",
    "components"
  ],
  "author": "Pavel Pleshko",
  "bugs": {
    "url": "https://github.com/PavelPleshko/yeti-design/issues"
  },
  "homepage": "https://github.com/PavelPleshko/yeti-design#readme",
  "devDependencies": {
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.30.0",
    "husky": "^8.0.2",
    "lerna": "^6.1.0",
    "lint-staged": "^13.1.0",
    "nx": "15.3.3",
    "prettier": "^2.8.1",
    "stylelint": "^14.16.0",
    "typescript": "^4.9.4"
  },
  "nx": {
    "targets": {}
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,css,scss,less,html}": [
      "prettier -u --write"
    ],
    "*.{js,ts,tsx,html}": [
      "eslint --fix"
    ],
    "*.{css,scss,less}": [
      "stylelint --fix"
    ]
  }
}
